@using COMP2139_ICE.Areas.ProjectManagement.Models
@inject SignInManager<ApplicationUser> SignInManager
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            
            <a class="navbar-brand"
               asp-area=""
               asp-controller="Home" 
               asp-action="Index"><i class="fa-solid fa-city"></i>PM Tool Inc</a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                
                <form class="d-flex align-items-center" asp-area="ProjectManagement" asp-controller="Home" asp-action="GeneralSearch" method="GET">
                    
                    <div class="input-group">
                        <input class="form-control me-2" type="text" placeholder="Search..." name="searchString" required/>

                        <select class="form-select me-2" name="searchType" required>
                            <option value=" " disabled selected>Select Search Type</option>
                            <option value="Projects">Projects</option>
                            <option value="Tasks">Tasks</option>
                        </select>

                        <button class="btn btn-outline-success" type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>Search
                        </button>
                    </div>

                </form>
                
                <ul class="navbar-nav flex-grow-1 justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="ProjectManagement" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house-user"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="ProjectManagement" asp-controller="Home" asp-action="About"><i class="fa-solid fa-circle-info"></i> About</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="ProjectManagement" asp-controller="Project" asp-action="Index"><i class="fa-solid fa-list-check"></i> Projects</a>
                    </li>
                    
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark"
                               asp-area="Identity"
                               asp-page="/Account/Manage/Index"
                               title="Manage your Profile"><i class="fa-solid fa-user-settings"></i>Profile
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <form asp-area="Identity" asp-page="/Account/Logout" method="Post">
                                <button  type="submit"><i class="nav-link btn btn-link text-dark" style="cursor:pointer"></i> Logout</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Identity"
                               asp-page="/Account/Login">
                                <i class=" fa fa-sign-in-alt"></i>Login
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               asp-area="Identity"
                               asp-page="/Account/Register">
                                <i class=" fa-solid fa-user-plus"></i>Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>  
    </nav>